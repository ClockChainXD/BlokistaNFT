<!DOCTYPE html>
<html lang="en">
<% include ../partials/head.ejs %>

    <body data-sa-theme="4">

        <div class="page-loader">
            <div class="page-loader__spinner">
                <svg viewBox="25 25 50 50">
                    <circle cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
                </svg>
            </div>
        </div>

        <div class="login">

            <!-- Register -->
            <div class="login__block active" id="l-register">
                <div class="login__block__header">
                    <div class="login__logo">
                        <!-- <img src="/images/logo.png"> -->
                        <h3>NFT Admin Panel</h3>
                        <p>Register</p>
                    </div>

                    <div class="actions actions--inverse login__block__actions">
                        <div class="dropdown">
                            <i data-toggle="dropdown" class="zwicon-more-h actions__item"></i>

                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="/auth/login">
                                    <%= i18n.__('Already have an account') %>?
                                </a>
                                <a class="dropdown-item" href="/auth/forgot-password">
                                    <%= i18n.__('Forgot password') %>?
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="login__block__body">
                    <div class="form-group form-group--centered">
                        <input type="text" class="form-control text-center" id="register_f_name"
                            placeholder="<%= i18n.__('Full Name') %>">
                    </div>

                    <div class="form-group form-group--centered">
                        <input type="text" class="form-control text-center" id="register_email"
                            placeholder="<%= i18n.__('Email Address') %>">
                    </div>

                    <div class="form-group form-group--centered">
                        <input type="password" class="form-control text-center" id="register_password"
                            placeholder="<%= i18n.__('Password') %>">
                    </div>

                    <div class="form-group form-group--centered">
                        <input type="password" class="form-control text-center" id="register_confirm_password"
                            placeholder="<%= i18n.__('Confirm Password') %>">
                    </div>

                    <button class="btn btn-outline-primary" id="submit_register" onclick="registerPost()">
                        <%= i18n.__('Register') %>
                    </button>
                </div>
            </div>

        </div>

        <% include ../partials/footer.ejs %>
            <% include ../partials/foot.ejs %>
                <script>
                    let messages = [
                        '<%= i18n.__("User name is empty") %>',
                        '<%= i18n.__("Last name is empty") %>',
                        '<%= i18n.__("Email is empty") %>',
                        '<%= i18n.__("Email format is wrong") %>',
                        '<%= i18n.__("Password is empty") %>',
                        '<%= i18n.__("Confirm password is empty") %>',
                        '<%= i18n.__("Confirm password does not match with password") %>',
                        '<%= i18n.__("Please input only english characters and numbers") %>',
                        '<%= i18n.__("Select user group") %>',
                    ];
                </script>
                <script src="/main/js/auth.js"></script>

    </body>

</html>