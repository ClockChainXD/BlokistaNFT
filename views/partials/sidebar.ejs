<aside class="sidebar ">
    <div class="scrollbar">
        <div class="logo d-none d-sm-inline-flex mb-3">
            <!-- <a href="/"><img src="/images/logo.png" width="70"></a> -->
            <h3>NFT Admin Panel</h3>
        </div>

        <div class="user">
            <div class="user__info">
                <img class="user__img" src="<%= user.avatar %>" alt="TestNFTs Logo">
                <div style="word-break: break-all">
                    <div class="user__name">
                        <%= user.username %>
                    </div>
                    <div class="user__email">
                        <%= user.email %>
                    </div>
                </div>
            </div>
        </div>

        <ul class="navigation">
            <% if(session.user.role==0 || session.user.role==1) { %>
                <li class="<%= (tab_text == 'dashboard') ? 'navigation__active' : '' %>">
                    <a href="/"><i class="zwicon-user-interview"></i>
                        Dashboard
                    </a>
                </li>
                <li class="<%= (tab_text == 'nft_user_management') ? 'navigation__active' : '' %>">
                    <a href="/admin/nft_users"><i class="zwicon-user-circle"></i>
                        NFT User Management
                    </a>
                </li>
                <% } %>
                    <li class="<%= (tab_text === 'settings') ? 'navigation__active' : '' %>">
                        <a href="/admin/account-settings"><i class="zwicon-cog"></i>
                            Account Settings
                        </a>
                    </li>

                    <li>
                        <a href="/auth/logout"><i class="zwicon-arrow-circle-right"></i>
                            Logout
                        </a>
                    </li>
        </ul>
    </div>
</aside>